{
  "name": "ytb-downloader-app",
  "description": "App for downloading video and audio from youtube",
  "version": "0.1.0",
  "private": true,
  "author": "Shirerpeton",
  "homepage": "./",
  "build": {
    "productName": "YtbDownloader",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "portable",
      "icon": "assets/app.ico"
    }
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.3"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "react-prebuild": "cross-env cp ../main/src/*.js public/",
    "electron-build": "electron-builder",
    "release": "npm run react-prebuild && npm run react-build && electron-builder --publish=always",
    "build": "npm run react-prebuild && npm run react-build && npm run electron-build",
    "start": "cross-env BROWSER=none npm run react-start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.3",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "electron-reload": "^1.5.0",
    "typescript": "^4.0.2",
    "wait-on": "^5.2.0",
    "watch": "^1.0.2"
  }
}
